    <!-- Section: Bài Đăng Nổi Bật -->
    <div class="section" id="featured-posts">
      <h2>Bài Đăng Nổi Bật</h2>
      <div class="featured-posts-grid" id="posts-grid">
        <!-- Bài đăng sẽ được thêm bằng JavaScript -->
