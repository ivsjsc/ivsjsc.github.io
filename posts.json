  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background-color: #f5f7fa;
      color: #333;
      line-height: 1.6;
    }

    /* Container chính */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    /* Header */
    .header {
      text-align: center;
      padding: 50px 0;
      background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
      color: white;
      border-radius: 10px;
      margin-bottom: 40px;
      position: relative;
      overflow: hidden;
    }

    .header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center/cover;
      opacity: 0.2;
      z-index: 0;
    }

    .header h1 {
      font-size: 2.5rem;
      margin-bottom: 15px;
      position: relative;
      z-index: 1;
    }

    .header p {
      font-size: 1.2rem;
      position: relative;
      z-index: 1;
    }

    /* Section */
    .section {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .section h2 {
      font-size: 1.8rem;
      color: #1e3c72;
      margin-bottom: 20px;
      border-bottom: 2px solid #2a5298;
      display: inline-block;
      padding-bottom: 5px;
    }

    .section h3 {
      font-size: 1.5rem;
      color: #2a5298;
      margin: 20px 0 10px;
    }

    .section p {
      font-size: 1.1rem;
      margin-bottom: 15px;
    }

    .section ul {
      list-style: none;
      padding-left: 20px;
    }

    .section ul li {
      font-size: 1.1rem;
      margin-bottom: 10px;
      position: relative;
    }

    .section ul li::before {
      content: '✔';
      color: #2a5298;
      position: absolute;
      left: -20px;
      top: 2px;
    }

    /* Team Section */
    .team-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .team-member {
      text-align: center;
      padding: 20px;
      background: #f9f9f9;
      border-radius: 10px;
      transition: transform 0.3s ease;
    }

    .team-member:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .team-member img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      margin-bottom: 15px;
      object-fit: cover;
    }

    .team-member h3 {
      font-size: 1.2rem;
      color: #1e3c72;
      margin-bottom: 5px;
    }

    .team-member p {
      font-size: 0.95rem;
      color: #666;
    }

    /* Hình ảnh minh họa */
    .guide-image {
      display: block;
      max-width: 100%;
      height: auto;
      margin: 20px auto;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    /* Featured Posts Section */
    .featured-posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .post-card {
      background: #f9f9f9;
      padding: 20px;
      border-radius: 10px;
      transition: transform 0.3s ease;
    }

    .post-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .post-card h3 {
      font-size: 1.3rem;
      color: #1e3c72;
      margin-bottom: 10px;
    }

    .post-card p {
      font-size: 1rem;
      color: #666;
      margin-bottom: 10px;
    }

    .post-card .meta {
      font-size: 0.9rem;
      color: #999;
      display: flex;
      justify-content: space-between;
    }

    .post-card .meta span {
      display: flex;
      align-items: center;
    }

    .post-card .meta i {
      margin-right: 5px;
    }

    /* Call to Action */
    .cta {
      text-align: center;
      padding: 40px 0;
      background: #2a5298;
      color: white;
      border-radius: 10px;
      margin-top: 40px;
    }

    .cta h2 {
      font-size: 2rem;
      margin-bottom: 20px;
    }

    .cta a {
      display: inline-block;
      padding: 15px 30px;
      background: #e63946;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-size: 1.1rem;
      transition: background 0.3s ease;
    }

    .cta a:hover {
      background: #d62828;
    }

    /* Redirect Timer */
    .redirect-timer {
      text-align: center;
      padding: 20px;
      background: #fff3cd;
      border-radius: 5px;
      margin: 20px 0;
      font-size: 1rem;
      color: #856404;
    }

    .redirect-timer button {
      margin-top: 10px;
      padding: 8px 16px;
      background: #dc3545;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .redirect-timer button:hover {
      background: #c82333;
    }

    /* Footer */
    .footer {
      text-align: center;
      padding: 20px 0;
      background: #1e3c72;
      color: white;
      margin-top: 40px;
    }

    .footer a {
      color: #e63946;
      text-decoration: none;
    }

    .footer a:hover {
      text-decoration: underline;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .header h1 {
        font-size: 2rem;
      }

      .header p {
        font-size: 1rem;
      }

      .section h2 {
        font-size: 1.5rem;
      }

      .section h3 {
        font-size: 1.3rem;
      }

      .section p,
      .section ul li {
        font-size: 1rem;
      }

      .cta h2 {
        font-size: 1.5rem;
      }

      .featured-posts-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
